<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Android 12+ Splash Theme -->
    <style name="LaunchTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF112852</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>

    <!-- App Theme AFTER splash -->
    <style name="NormalTheme" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Dark status bar -->
        <item name="android:statusBarColor">#FF112852</item>

        <!-- White icons -->
        <item name="android:windowLightStatusBar">false</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>

